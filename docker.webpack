# docker.webpack

FROM ubuntu:latest

WORKDIR /app
COPY ./ /app
COPY ./src/resources /wwwroot/resources

RUN apt-get update
RUN apt-get install curl -y
RUN curl -sL https://deb.nodesource.com/setup_6.x | bash - && apt-get install nodejs -y
RUN npm install webpack -g

WORKDIR src
RUN npm install
CMD npm install && webpack --watch --watch-polling